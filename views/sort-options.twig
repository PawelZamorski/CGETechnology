{% extends 'layout.twig' %}

{% block content %}
<div class="row">
  <div class="col">
    <h1 class="text-left">Sort and filter data</h1>
    <p>Comment: different options for sorting and filtering data. There are not many data in table. For that reason sorting and filtering is done by using JavaScript in browser.</p>
  </div>
</div>
<hr>
<div class="row mt-3">
  <div class="col">
    <p>Sort in ascending order:</p>
    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
      <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" onclick="sortTable(0, true)">
      <label class="btn btn-outline-primary" for="btnradio1">Sort by Number</label>

      <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off" onclick="sortTable(1, true)">
      <label class="btn btn-outline-primary" for="btnradio2">Sort by Date</label>

      <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off" onclick="sortTable(2, true)">
      <label class="btn btn-outline-primary" for="btnradio3">Sort by Project</label>

      <input type="radio" class="btn-check" name="btnradio" id="btnradio4" autocomplete="off" onclick="sortTable(3, true)">
      <label class="btn btn-outline-primary" for="btnradio4">Sort by Project Ref</label>

      <input type="radio" class="btn-check" name="btnradio" id="btnradio5" autocomplete="off" onclick="sortTable(4, true)">
      <label class="btn btn-outline-primary" for="btnradio5">Sort by Type</label>
    </div>
  </div>
</div>
<div class="row mt-3">
  <div class="col">
    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
      <div class="btn-group" role="group">
        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Sort in descending order by:
        </button>
        <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
          <li><a class="dropdown-item" onclick="sortTable(0, false)">Number</a></li>
          <li><a class="dropdown-item" onclick="sortTable(1, false)">Date</a></li>
          <li><a class="dropdown-item" onclick="sortTable(2, false)">Project</a></li>
          <li><a class="dropdown-item" onclick="sortTable(3, false)">Project Ref</a></li>
          <li><a class="dropdown-item" onclick="sortTable(4, false)">Type</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="row mt-3">
  <p>Filter Data by Type or Project:</p>
  <div class="col-lg-2">
    <input type="text" class="form-control" id="inputType" onkeyup="filterType()" placeholder="Search for type..." title="Type in a type">
  </div>
  <div class="col-lg-2">
    <input type="text" class="form-control" id="inputProject" onkeyup="filterProject()" placeholder="Search for project..." title="Type in a project">
  </div>
</div>
<div class="mt-3">
  <p>Filter Data by Year:</p>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" value="" id="2016" onclick="selectYear(2016)" checked>
    <label class="form-check-label" for="2016">2016</label>
  </div>
      <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" value="" id="2017" onclick="selectYear(2017)" checked>
    <label class="form-check-label" for="2017">2017</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" value="" id="2018" onclick="selectYear(2018)" checked>
    <label class="form-check-label" for="2018">2018</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" value="" id="2019" onclick="selectYear(2019)" checked>
    <label class="form-check-label" for="2019">2019</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" value="" id="2020" onclick="selectYear(2020)" checked>
    <label class="form-check-label" for="2020">2020</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" value="" id="2021" onclick="selectYear(2021)" checked>
    <label class="form-check-label" for="2021">2021</label>
  </div>
</div>
<div class="row">
  <table class="table table-striped" id="myTable">
    <thead>
      <tr>
        <th scope="col">Number</th>
        <th scope="col">Incident Date</th>
        <th scope="col">Project</th>
        <th scope="col">Project Reference</th>
        <th scope="col">Type</th>
      </tr>
    </thead>
    <tbody>

    {% for incident in incidents %}
      <tr>
        <td>{{ incident.getNumber }}</td>
        <td>{{ incident.getIncidentdate }}</td>
        <td>{{ incident.getProject }}</td>
        <td>{{ incident.getProjectReference }}</td>
        <td>{{ incident.getType }}</td>
      </tr>
    {% endfor %}

    </tbody>
  </table>
</div>

<script src="/js/sort-filter.js"></script>

{% endblock %}